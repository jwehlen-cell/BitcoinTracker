{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Bitcoin Mining Tracker - EC2 deployment",
  "Parameters": {
    "VpcId": {
      "Type": "String",
      "Default": "vpc-0514bd5157e1880ff"
    },
    "SubnetId": {
      "Type": "String", 
      "Default": "subnet-00fda05771f13b609"
    }
  },
  "Resources": {
    "SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupName": "bitcoin-tracker-ec2-sg",
        "GroupDescription": "Security group for Bitcoin Tracker EC2",
        "VpcId": {
          "Ref": "VpcId"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "tcp",
            "FromPort": 80,
            "ToPort": 80,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": 3000,
            "ToPort": 3000,
            "CidrIp": "0.0.0.0/0"
          },
          {
            "IpProtocol": "tcp",
            "FromPort": 22,
            "ToPort": 22,
            "CidrIp": "0.0.0.0/0"
          }
        ]
      }
    },
    "EC2Instance": {
      "Type": "AWS::EC2::Instance",
      "Properties": {
        "ImageId": "ami-0c02fb55956c7d316",
        "InstanceType": "t3.micro",
        "SubnetId": {
          "Ref": "SubnetId"
        },
        "SecurityGroupIds": [
          {
            "Ref": "SecurityGroup"
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash\n",
                "yum update -y\n",
                "yum install -y git\n",
                "curl -fsSL https://rpm.nodesource.com/setup_18.x | bash -\n",
                "yum install -y nodejs\n",
                "cd /home/ec2-user\n",
                "git clone https://github.com/jwehlen-cell/BitcoinTracker.git\n",
                "cd BitcoinTracker\n",
                "npm install\n",
                "nohup npm start > app.log 2>&1 &\n",
                "sleep 5\n",
                "yum install -y nginx\n",
                "cat > /etc/nginx/nginx.conf << 'EOF'\n",
                "events { worker_connections 1024; }\n",
                "http {\n",
                "  server {\n",
                "    listen 80;\n",
                "    location / {\n",
                "      proxy_pass http://localhost:3000;\n",
                "      proxy_set_header Host $host;\n",
                "      proxy_set_header X-Real-IP $remote_addr;\n",
                "    }\n",
                "  }\n",
                "}\n",
                "EOF\n",
                "systemctl start nginx\n",
                "systemctl enable nginx\n"
              ]
            ]
          }
        },
        "Tags": [
          {
            "Key": "Name",
            "Value": "bitcoin-tracker-server"
          }
        ]
      }
    }
  },
  "Outputs": {
    "PublicIP": {
      "Description": "Public IP address of the EC2 instance",
      "Value": {
        "Fn::GetAtt": [
          "EC2Instance",
          "PublicIp"
        ]
      }
    },
    "ApplicationURL": {
      "Description": "URL of the Bitcoin Mining Tracker application",
      "Value": {
        "Fn::Sub": "http://${EC2Instance.PublicIp}"
      }
    }
  }
}